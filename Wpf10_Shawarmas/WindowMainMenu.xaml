<Window x:Class="Wpf10_Shawarmas.WindowsMainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf10_Shawarmas"
        mc:Ignorable="d"
        Icon="/res/favicon.ico"
        WindowStartupLocation="CenterScreen"
        Title="Main Menu" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/> <!--ToolBar-->
            <RowDefinition Height="9*"/> <!--Content-->
            <RowDefinition Height="0.7*"/> <!--Footer-->
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button 
                x:Name="BtnBuy" 
                Content="Comprar" 
                Width="Auto" 
                Height="Auto" 
                Grid.Column="0" 
                Click="BtnBuy_Click"/>
            <Button 
                x:Name="BtnConfiguration" 
                Content="Configuración" 
                Width="Auto" 
                Height="Auto" 
                Grid.Column="1" 
                Click="BtnConfiguration_Click"/>
            <Button 
                x:Name="BtnAbout" 
                Content="Acerca de" 
                Width="Auto" Height="Auto" 
                Grid.Column="2" 
                Click="BtnAbout_Click"/>
            <Button x:Name="BtnExit" 
                    Content="Salir" 
                    Width="Auto" 
                    Height="Auto"
                    Grid.Column="3" 
                    Click="BtnExit_Click"/>
             
        </Grid> <!--ToolBar-->

        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/> <!--Products-->
                <ColumnDefinition Width="*"/> <!--Details-->
            </Grid.ColumnDefinitions>
        </Grid> <!--Content-->

        <Frame
            Grid.Row="1"
            x:Name="MainFrame" 
            NavigationUIVisibility="Hidden"/>

        <Grid
            Grid.Row="2">

            <StackPanel 
                Orientation="Horizontal">
                <TextBlock 
                    Text="Mute:" 
                    VerticalAlignment="Center" 
                    Margin="10,0,10,0"/>
                <ToggleButton 
                    Style="{StaticResource SimpleToggleSwitch}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
