<Window x:Class="Wpf10_Shawarmas.ViewLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf10_Shawarmas"
        mc:Ignorable="d"
        Icon="/res/favicon2.ico"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="300" Width="475">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="170*"/> <!--Logo-->
            <ColumnDefinition Width="170*"/> <!--Login Controls-->
            <ColumnDefinition Width="43*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image 
            Grid.Column="1"
            Grid.Row="1"
            Source="/res/logo.png"/> <!--Logo-->

        <Grid
            Grid.Row="1"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!--Label Username-->
                <RowDefinition Height="Auto"/> <!--Textbox Username-->
                <RowDefinition Height="Auto"/> <!--Label Password-->
                <RowDefinition Height="Auto"/> <!--PasswordBox-->
                <RowDefinition Height="Auto"/> <!--Buttons-->
            </Grid.RowDefinitions>
            <TextBlock
                Text="Username:"
                Grid.Row="0"
                FontSize="10"
                FontWeight="Bold"
                HorizontalAlignment="Stretch"
                Margin="0,0,0,5"/>
            <TextBox
                x:Name="TxtUsername"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                Margin="0,0,0,5"
                Width="150"
                Height="15"/>
            <TextBlock
                Text="Password:"
                Grid.Row="2"
                FontSize="10"
                FontWeight="Bold"
                HorizontalAlignment="Stretch"
                Margin="0,0,0,5"/>
            <PasswordBox
                x:Name="PwdPassword"
                Grid.Row="3"
                HorizontalAlignment="Stretch"
                Width="150"
                Height="15"/>
            <Grid
                Grid.Row="4"
                Width="150"
                Margin="0,10,0,0"
                Height="25"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/> <!--Button Sign Up-->
                    <ColumnDefinition Width="*"/> <!--Button Login-->
                </Grid.ColumnDefinitions>
                
                <Button
                    x:Name="BtnSignUp"
                    Grid.Column="0"
                    FontSize="8"
                    Style="{StaticResource ButtonDefault}"
                    HorizontalAlignment="Stretch"
                    Width="50"
                    Height="15"
                    Click="BtnSignUp_Click"
                    Content="Sign Up"/> <!--Sign Up-->
                <Button
                    x:Name="BtnLogin"
                    Grid.Column="1"
                    FontSize="8"
                    Style="{StaticResource ButtonDefault}"
                    HorizontalAlignment="Stretch"
                    Width="50"
                    Height="15"
                    Click="BtnLogin_Click"
                    Content="Login"/> <!--Login-->
            </Grid>
        </Grid> <!--Login Controls-->
        
        <Button
            x:Name="BtnGuest"
            Grid.Column="4"
            Grid.Row="2"
            Style="{StaticResource ButtonSecret}"
            FontSize="8"
            Width="35"
            Height="15"
            Content="Guest" 
            Margin="4,14,4,14" 
            Click="BtnGuest_Click"/> <!--Guest-->
    </Grid>
</Window>
