<Window x:Class="Wpf10_Shawarmas.MVVM.View.ViewSignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf10_Shawarmas.MVVM.View"
        mc:Ignorable="d"
        Icon="/Resources/Icons/favicon2.ico"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Sign Up" Height="300" Width="450">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.75*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,10,0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock
                Text="Name:"
                Grid.Row="0"
                FontSize="10"
                FontWeight="Bold"
                Height="15"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"/>

            <TextBlock
                Text="Surename 1:"
                Grid.Row="1"
                FontSize="10"
                FontWeight="Bold"
                Height="15"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"/>

            <TextBlock
                Text="Surename 2:"
                Grid.Row="2"
                FontSize="10"
                FontWeight="Bold"
                Height="15"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"/>

            <TextBlock
                Text="Email:"
                Grid.Row="3"
                FontSize="10"
                FontWeight="Bold"
                Height="15"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"/>

            <TextBlock
                Text="Password:"
                Grid.Row="4"
                FontSize="10"
                FontWeight="Bold"
                Height="15"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"/>

        </Grid> <!--Labels-->

        <Grid
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBox
                x:Name="TxtName"
                Grid.Row="0"
                FontSize="10"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"
                Width="200"
                Height="15"/> <!-- Name Input -->
            
            <TextBox
                x:Name="TxtSurename1"
                Grid.Row="1"
                FontSize="10"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"
                Width="200"
                Height="15"/> <!-- Surename1 Input -->
            
            <TextBox
                x:Name="TxtSurename2"
                Grid.Row="2"
                FontSize="10"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"
                Width="200"
                Height="15"/> <!-- Surename2 Input -->
            
            <TextBox
                x:Name="TxtEmail"
                Grid.Row="3"
                FontSize="10"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"
                Width="200"
                Height="15"/> <!-- Email Input -->
            
            <PasswordBox
                x:Name="PwdPassword"
                Grid.Row="4"
                FontSize="10"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"
                Width="200"
                Height="15"/> <!-- Password Input -->
            
        </Grid> <!--Input Fields-->

        <Button
            x:Name="BtnReturn"
            Grid.Column="0"
            Grid.Row="2"
            Width="50"
            HorizontalAlignment="Center"
            Height="15"
            FontSize="10"
            Style="{StaticResource ButtonDefault}"
            Content="Return" 
            Click="BtnReturn_Click"/> <!-- Return Control -->

        <Button
            x:Name="BtnSignUp"
            Grid.Column="2"
            Grid.Row="3"
            Width="50"
            Height="15"
            FontSize="10"
            Style="{StaticResource ButtonDefault}"
            Content="Sign Up" 
            Click="BtnSignUp_Click"/> <!-- Sign Up Control -->

    </Grid>
</Window>
