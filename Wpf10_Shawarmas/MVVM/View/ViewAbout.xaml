<Page x:Class="Wpf10_Shawarmas.MVVM.View.ViewAbout"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf10_Shawarmas.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewAbout">

    <Grid Background="#0F0F0F">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border
            Grid.ColumnSpan="2"
            Height="60"
            Margin="0,0,40,0"
            CornerRadius="16"
            Background="#141414"
            VerticalAlignment="Center">

            <Button
                x:Name="BtnReturn"
                Content="Return"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="20,0"
                Width="100"
                Height="32"
                Style="{StaticResource ButtonDefault}"
                Click="BtnReturn_Click"/> <!--Return Button-->

        </Border> <!-- Header -->

        <Border
            Style="{StaticResource BorderCard}"
            Grid.Row="1"
            Grid.Column="0"
            Margin="30"
            Padding="30"
            CornerRadius="26"
            Background="#141414"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="360">
            
            <Border.Effect>
                <DropShadowEffect 
                    BlurRadius="30" 
                    ShadowDepth="0" 
                    Opacity="0.45"/>
                
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center">
                <Border 
                    CornerRadius="75" 
                    Margin="0,10">
                    
                    <Image
                        Width="150"
                        Height="150"
                        Source="/res/ProfilePictures/donivanovich.jpg">

                        <Image.Clip>
                            <EllipseGeometry
                                Center="75,75"
                                RadiusX="75"
                                RadiusY="75"/>

                        </Image.Clip>
                    </Image>
                </Border>

                <TextBlock
                    FontSize="22"
                    FontWeight="SemiBold"
                    Margin="0,20,0,6"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Text="Ivan Kosolovskyy Fetsyk"/>

                <TextBlock
                    FontSize="15"
                    Margin="0,0,0,6"
                    Foreground="#B0B0B0"
                    HorizontalAlignment="Center"
                    Text="Backend Developer"/>

                <TextBlock
                    FontSize="14"
                    Margin="0,0,0,14"
                    Foreground="#8E8E8E"
                    HorizontalAlignment="Center"
                    Text="C++ / Java / Unity"/>

                <TextBlock
                    FontSize="14"
                    Foreground="#6FC3DF"
                    HorizontalAlignment="Center"
                    Text="https://github.com/donivanovich"/>
                
            </StackPanel>
        </Border> <!-- Ivans Card -->

        <Border
            Style="{StaticResource BorderCard}"
            Grid.Row="1"
            Grid.Column="1"
            Margin="30"
            Padding="30"
            CornerRadius="26"
            Background="#141414"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="360">
            
            <Border.Effect>
                <DropShadowEffect 
                    BlurRadius="30" 
                    ShadowDepth="0" 
                    Opacity="0.45"/>
                
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center">
                
                <Border 
                    CornerRadius="75" 
                    Margin="0,10">
                    
                    <Image
                        Width="150"
                        Height="150"
                        Source="/res/ProfilePictures/javierJ-S.png">

                        <Image.Clip>
                            <EllipseGeometry
                                Center="75,75"
                                RadiusX="75"
                                RadiusY="75"/>

                        </Image.Clip>
                    </Image>
                </Border>

                <TextBlock
                    FontSize="22"
                    FontWeight="SemiBold"
                    Margin="0,20,0,6"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Text="Javier Jímenez Simón"/>

                <TextBlock
                    FontSize="15"
                    Margin="0,0,0,6"
                    Foreground="#B0B0B0"
                    HorizontalAlignment="Center"
                    Text="Frontend Developer"/>

                <TextBlock
                    FontSize="14"
                    Margin="0,0,0,14"
                    Foreground="#8E8E8E"
                    HorizontalAlignment="Center"
                    Text="HTML / XAML / CSS"/>

                <TextBlock
                    FontSize="14"
                    Foreground="#6FC3DF"
                    HorizontalAlignment="Center"
                    Text="https://github.com/javierJ-S"/>
                
            </StackPanel>
        </Border> <!-- Javis Card -->
    </Grid>
</Page>
