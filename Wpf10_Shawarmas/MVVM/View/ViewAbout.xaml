<Page x:Class="Wpf10_Shawarmas.MVVM.View.ViewAbout"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf10_Shawarmas.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewAbout">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button
            x:Name="BtnReturn"
            Grid.Row="0" 
            Grid.Column="0" 
            Content="Return" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="10"
            Click="BtnReturn_Click"/> <!--Return-->

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="10">

            <StackPanel
                HorizontalAlignment="Center">
                <Image
                    Width="150"
                    Height="150"
                    Margin="0,10,0,10"
                    Source="/res/ProfilePictures/donivanovich.jpg"/> <!--Image-->
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Text="Ivan Kosolovskyy Fetsyk"/> <!--Name-->
                <TextBlock
                    FontSize="14"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Text="Backend Developer"/> <!--Position-->
                <TextBlock
                    FontSize="14"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Text="C++/Java/Unity"/> <!--Skills-->
                <TextBlock
                    FontSize="14"
                    HorizontalAlignment="Center"
                    Text="https://github.com/donivanovich"/> <!--Github-->
            </StackPanel>
        </Grid> <!--Details Ivan-->

        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="10">

            <StackPanel
                HorizontalAlignment="Center">
                <Image
                    Width="150"
                    Height="150"
                    Margin="0,10,0,10"
                    Source="/res/ProfilePictures/javierJ-S.png"/> <!--Image-->
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Text="Javier Jímenez Simón"/> <!--Name-->
                <TextBlock
                    FontSize="14"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Text="Frontend Developer"/> <!--Position-->
                <TextBlock
                    FontSize="14"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Text="HTML/XAML/CSS"/> <!--Skills-->
                <TextBlock
                    FontSize="14"
                    HorizontalAlignment="Center"
                    Text="https://github.com/javierJ-S"/> <!--Github-->
            </StackPanel>
        </Grid> <!--Details Javier-->
    </Grid>
</Page>
