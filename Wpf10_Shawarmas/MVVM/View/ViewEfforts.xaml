<Page x:Class="Wpf10_Shawarmas.MVVM.View.ViewEfforts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf10_Shawarmas.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewEfforts">

    <Grid Background="#1C1C1C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- IZQUIERDA: Pedidos -->
        <ScrollViewer 
            Grid.Column="0" 
            VerticalScrollBarVisibility="Auto">
            
            <ItemsControl 
                ItemsSource="{Binding Pedidos}">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button 
                            Command="{Binding DataContext.SeleccionarPedidoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            Padding="15"
                            Width="155"
                            Height="120"
                            Margin="10,10,0,0"
                            Background="#2C2C2C"
                            BorderBrush="#444"
                            BorderThickness="1"
                            Cursor="Hand">

                            <Button.Resources>
                                <!-- Hover Style -->
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border
                                                    x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="15">

                                                    <ContentPresenter 
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>

                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger 
                                                        Property="IsMouseOver" 
                                                        Value="True">

                                                        <Setter 
                                                            TargetName="border" 
                                                            Property="Background" 
                                                            Value="#444"/>

                                                        <Setter 
                                                            TargetName="border" 
                                                            Property="BorderBrush" 
                                                            Value="#666"/>

                                                    </Trigger>
                                                    <Trigger 
                                                        Property="IsPressed" 
                                                        Value="True">

                                                        <Setter 
                                                            TargetName="border" 
                                                            Property="Background" 
                                                            Value="#555"/>

                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Resources>

                            <StackPanel>
                                <TextBlock 
                                    Text="Order #" 
                                    Foreground="#CCC" 
                                    FontWeight="SemiBold" 
                                    FontSize="14"/>

                                <TextBlock 
                                    Text="{Binding IdPedido}" 
                                    Foreground="#FFF" 
                                    FontWeight="Bold" 
                                    FontSize="18"/>

                                <TextBlock 
                                    Text="{Binding Cliente.Nombre}" 
                                    Foreground="#EEE"
                                    FontSize="14"/>

                                <TextBlock 
                                    Text="{Binding FechaPedido, StringFormat=d}" 
                                    Foreground="#AAA" 
                                    FontSize="12"/>
                                
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- DERECHA: Detalles del Pedido -->
        <ContentControl 
            Grid.Column="1" 
            Content="{Binding PedidoSeleccionado}" 
            Margin="10" Cursor="">

            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <Border 
                        Background="#2C2C2C" 
                        CornerRadius="10" 
                        Padding="10">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock 
                                Grid.Row="0"
                                Text="Order Items" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Center"
                                FontSize="16" 
                                Foreground="#FFF" 
                                Margin="0,0,0,10"/>

                            <ScrollViewer 
                                Grid.Row="1"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,0,0,10">

                                <ItemsControl ItemsSource="{Binding Productos}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border 
                                                Background="#333" 
                                                CornerRadius="8" 
                                                Padding="8" 
                                                Margin="0,5">
                                                
                                                <StackPanel 
                                                    Orientation="Horizontal" 
                                                    VerticalAlignment="Center">

                                                    <TextBlock 
                                                        Visibility="Collapsed" 
                                                        x:Name="rutaGenerada" 
                                                        Text="{Binding Imagen, StringFormat=/res{0}}"/>

                                                    <Image 
                                                        Source="{Binding ElementName=rutaGenerada, Path=Text}" 
                                                        Width="75" 
                                                        Height="75" 
                                                        Margin="0,0,10,0"/>

                                                    <StackPanel>
                                                        <TextBlock 
                                                            Text="{Binding Marca}"
                                                            FontWeight="Bold"
                                                            Foreground="#FFF"/>

                                                        <TextBlock 
                                                            Text="{Binding Modelo}" 
                                                            Foreground="#CCC"/>

                                                        <TextBlock 
                                                            Text="{Binding Precio, StringFormat=C}"
                                                            Foreground="#AAA"/>

                                                        <TextBlock Foreground="#AAA">
                                                            <Run Text="Size:"/>
                                                            <Run Text="{Binding Talla}"/>
                                                        </TextBlock>

                                                        <TextBlock Foreground="#AAA">
                                                            <Run Text="x"/>
                                                            <Run Text="{Binding Cantidad}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <StackPanel Grid.Row="2">
                                <!-- Detalles del pedido -->
                                <Border 
                                    Background="#3A3A3A" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,0,0,10">

                                    <StackPanel>
                                        <TextBlock 
                                            Text="Order Details" 
                                            FontWeight="Bold" 
                                            FontSize="14" 
                                            Foreground="#FFF" 
                                            Margin="0,0,0,8"/>

                                        <!-- Cliente + Dirección UNIFICADO -->
                                        <TextBlock Foreground="#FFF" FontSize="12" Margin="0,0,0,6" TextWrapping="Wrap">
                                            <Run Text="Client:" FontWeight="SemiBold"/>
                                            <Run Text="{Binding Cliente.Nombre}"/>
                                            <Run Text="{Binding Cliente.Apellido1}"/>
                                            <Run Text="{Binding Cliente.Apellido2}"/>
                                            <LineBreak/>
                                            <Run Text="{Binding Pais, FallbackValue='Country: '}" />
                                            <LineBreak/>
                                            <Run Text="{Binding Ciudad, StringFormat='City: {0}', FallbackValue='City: '}" />
                                            <LineBreak/>
                                            <Run Text="{Binding Calle, StringFormat='Address: {0}', FallbackValue='Address: '}" />
                                            <LineBreak/>
                                            <Run Text="{Binding Postal, StringFormat='ZIP: {0}', FallbackValue='ZIP: '}" />
                                        </TextBlock>

                                        <!-- Fecha -->
                                        <TextBlock 
                                            Text="{Binding FechaPedido, StringFormat='Date: {0:dd/MM/yyyy}', FallbackValue='Date: Pending'}" 
                                            Foreground="#CCC" 
                                            FontSize="11"/>
                                    </StackPanel>
                                </Border>

                                <Button 
                                    Content="Mark as completed"
                                    Command="{Binding DataContext.MarcarComoCompletadoCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                    CommandParameter="{Binding}"
                                    HorizontalAlignment="Center"
                                    Padding="10,5"
                                    Width="140"
                                    Height="35"
                                    Cursor="Hand">  
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ContentControl.ContentTemplate>

        </ContentControl>
    </Grid>
</Page>
